@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron" style="background-color: #C9D4F1;">
    <h1 style="color:#16213e">Care, Share, Defend COVID </h1>
    <p class="lead">
        <div class="entry-content">
            <ul style="color: #0f3460;font-weight: bold">
                <li>New here? Register now!</li>
                <li>Experiencing COVID symptoms? Respond for doctor's response</li>
                <li>COVID positive? Update us!</li>
                <li>Had close contacts? Share with us</li>
            </ul>
        </div>
    </p>
    @* <p><a href="https://www.cdc.gov/coronavirus/2019-ncov/prevent-getting-sick/how-covid-spreads.html" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>*@
</div>

<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="item active">
            <img src="~/img/smtm1.png" alt="Los Angeles">
        </div>

        <div class="item">
            <img src="~/img/smtm2.png" alt="Chicago">
        </div>

        <div class="item">
            <img src="~/img/smtm3.png" alt="New York">
        </div>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

